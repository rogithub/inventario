@{
    ViewData["Title"] = "Users";
}
<h1>Usuarios</h1>


@if (Model != null) {
<div class="row row-cols-1 row-cols-md-2 g-3">
    @foreach (var it in Model) {    
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    @it.Email                 
                </h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    @if (it.IsActive){
                        <span class="badge bg-success">active</span>
                    }else{
                        <span class="badge bg-danger">not active</span>
                    }
                </h6>                
                
                <div class="row g-3">            
                    <div class="col-auto">                        
                        <a asp-route-email="@it.Email" asp-action="ResetPassword" asp-controller="Users" class="btn btn-info btn-sm">Reset pwd</a>
                    </div>                   
                    <form class="col-auto" asp-action="ToggleActive" asp-controller="Users" method="post">
                        <input type="hidden" name="Id" value="@it.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">Toggle active</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    }
</div>

}else{
    <p>
        No se han creado usuarios.
    </p>
}