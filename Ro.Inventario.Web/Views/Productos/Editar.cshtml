@{
    ViewData["Title"] = "Productos Nuevos";
    @model Ro.Inventario.Web.Models.ProductoModel;
}
<h2>Editar Producto</h2>
<div>
    <form asp-action="Editar" asp-controller="Productos" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id" type="hidden" />
        <input asp-for="UnidadMedidaId" type="hidden" />
        <input asp-for="CategoriaId" type="hidden" />
        <input asp-for="PrecioVentaId" type="hidden" />

        <div class="mb-3">
            <label for="txtNombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtUnidadMedida" class="form-label">Unidad de Medida</label>
            <input asp-for="UnidadMedida" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtCategoria" class="form-label">Categoria</label>
            <input asp-for="Categoria" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtBarrasItem" class="form-label">Codigo de barras en el producto</label>
            <input asp-for="CodigoBarrasItem" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtBarrasCaja" class="form-label">Codigo de barras en la caja</label>
            <input asp-for="CodigoBarrasCaja" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="txtPrecioVenta" class="form-label">Precio de Venta</label>
            <input asp-for="PrecioVenta" type="text" class="form-control" />
        </div>

        <div>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Productos">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

    </form>
</div>